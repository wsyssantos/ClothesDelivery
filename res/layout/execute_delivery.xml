<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/very_light_gray"
	android:orientation="horizontal" >

	<ToggleButton
		android:id="@+id/btnListPendentDeliveries"
		android:layout_width="0dp"
		android:layout_height="28dp"
		android:layout_weight="1"
		android:background="@drawable/toggle_red_button"
		android:textColor="@drawable/toggle_red_button"
		android:textOff="A realizar"
		android:textOn="A realizar"
		android:textSize="12sp" 
		/>

	<View
		android:layout_width="1dp"
		android:layout_height="match_parent"
		android:background="@color/gray" />

	<ToggleButton
		android:id="@+id/btnListFinishedDeliveries"
		android:layout_width="0dp"
		android:layout_height="28dp"
		android:layout_weight="1"
		android:background="@drawable/toggle_red_button"
		android:text="Selecionar"
		android:textColor="@drawable/toggle_red_button"
		android:textOff="Realizadas"
		android:textOn="Realizadas"
		android:textSize="12sp" />

</LinearLayout>