<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/login_backgroung_beige"
		android:baselineAligned="false"
		android:orientation="horizontal" >

		<FrameLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="8" >

			<TextView
				android:id="@+id/lblDistrict"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:gravity="right"
				android:paddingRight="5dp"
				android:text="Santa Cecilia"
				android:textColor="@color/very_dark_gray"
				android:textSize="13sp"
				android:textStyle="bold" />
		</FrameLayout>

		<FrameLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="5" >

			<TextView
				android:id="@+id/lblDeliveryId"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
				android:gravity="left"
				android:text="2347623894"
				android:textAlignment="textEnd"
				android:textColor="@color/gray"
				android:textSize="12sp" />
		</FrameLayout>

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="4"
			android:gravity="center_vertical"
			android:orientation="vertical" >

			<TextView
				android:id="@+id/lblDeliveryDay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:text="AMANHA"
				android:textColor="@color/very_dark_gray"
				android:textSize="12sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/lblDeliveryHour"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="right"
				android:text="09h-10h"
				android:textAlignment="textEnd"
				android:textColor="@color/gray"
				android:textSize="12sp" />
		</LinearLayout>

		<FrameLayout
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:layout_weight="3" >

			<Button
				android:id="@+id/btnDetail"
				android:layout_width="42dp"
				android:layout_height="42dp"
				android:layout_gravity="top|right"
				android:layout_marginRight="4dp"
				android:layout_marginTop="4dp"
				android:background="@drawable/expander_open_holo_light"
				android:textColor="@color/gray" />
		</FrameLayout>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/viewDetail"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:orientation="vertical" 
		>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/gray" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/light_gray"
			android:orientation="vertical"
			android:paddingBottom="5dp"
			android:paddingLeft="20dp"
			android:paddingTop="5dp" >

			<TextView
				android:id="@+id/lblClientName"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:text="Joao da Silva"
				android:textColor="@color/gray"
				android:textSize="13sp" />

			<TextView
				android:id="@+id/lblDeliveryAddress"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="3dp"
				android:gravity="left"
				android:text="Rua Loefgreen, 1291"
				android:textColor="@color/gray"
				android:textSize="13sp" />
		</LinearLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/very_light_gray"
			android:paddingBottom="5dp"
			android:paddingLeft="20dp"
			android:paddingTop="5dp" >

			<TextView
				
				android:id="@+id/lblLabelCity"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Cidade:"
				android:textColor="@color/gray"
				android:textSize="12sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/lblCity"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/text_spacing"
				android:layout_toRightOf="@id/lblLabelCity"
				android:text="Sao Paulo"
				android:textColor="@color/light_blue"
				android:textSize="12sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/lblLabelTel"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/text_spacing"
				android:layout_toRightOf="@id/lblCity"
				android:text="Tel:"
				android:textColor="@color/gray"
				android:textSize="12sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/lblPhone"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/text_spacing"
				android:layout_toRightOf="@id/lblLabelTel"
				android:text="011-99999-9999"
				android:textColor="@color/light_blue"
				android:textSize="12sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/lblLabelEmail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/lblLabelCity"
				android:text="Email:"
				android:textColor="@color/gray"
				android:textSize="12sp"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/lblEmail"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignTop="@id/lblLabelEmail"
				android:layout_marginLeft="@dimen/text_spacing"
				android:layout_toRightOf="@id/lblLabelEmail"
				android:text="teste@testing.com"
				android:textColor="@color/light_blue"
				android:textSize="12sp"
				android:textStyle="bold" />
		</RelativeLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/gray" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/very_light_gray" >

			<Button
				android:id="@+id/btnMap"
				android:layout_width="0dp"
				android:layout_height="36dp"
				android:layout_weight="1"
				android:background="@drawable/deliver_list_item_button"
				android:text="Mapa"
				android:textColor="@drawable/deliver_list_item_button"
				android:textSize="12sp" />

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="@color/gray" />

			<View
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:background="@android:color/transparent" />

			<View
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:background="@color/gray" />

			<ToggleButton
				android:id="@+id/btnSelect"
				android:layout_width="0dp"
				android:layout_height="36dp"
				android:layout_weight="1"
				android:background="@drawable/deliver_list_item_toggle_button"
				android:textOn="Selecionar"
				android:textOff="Selecionar"
				android:textColor="@drawable/deliver_list_item_toggle_button"
				android:textSize="12sp"
				/>
		</LinearLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:background="@color/gray" />
	</LinearLayout>

</LinearLayout>